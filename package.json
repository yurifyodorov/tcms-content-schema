{
  "name": "tcms-content-schema",
  "version": "1.0.0",
  "description": "Content schemas for TCMS",
  "main": "index.js",
  "directories": {
    "example": "example"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "gen:types": "ts-node ./scripts/generate-schema-types.ts ./schemas",
    "replace-cuid:playgound": "ts-node ./scripts/replace-cuid.ts ./playgound",
    "replace-cuid": "ts-node ./scripts/replace-cuid.ts",
    "validate": "ts-node ./scripts/validate.ts",
    "dev": "concurrently -P --kill-others \"npm:replace-cuid -- {@}\" \"npm:validate -- {@}\" --",
    "dev:prod": "npm run dev -- ../tcms-content/"
  },
  "author": "Yuri Fedorov",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chokidar": "^3.6.0",
    "cuid": "^3.0.0",
    "json-schema-to-typescript": "^15.0.0",
    "yaml": "^2.5.0"
  }
}
