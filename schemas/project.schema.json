{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "cases",
    "thumbnail",
    "image"
  ],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "title": "Uuid" },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "shortDescription": {
      "type": "string"
    },
    "thumbnail": {
      "type": "string",
      "$comment": "url to image sizes 600x300"
    },
    "image": {
      "type": "string",
      "$comment": "url to image sizes 1920x600"
    },
    "cases": {
      "type": "array",
      "items": {
        "type": "string",
        "title": "CasePath"
      }
    }
  }
}